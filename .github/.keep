# Get the temperature and conversion type from the user
temp_type = input("Enter 'C' for Celsius to Fahrenheit or 'F' for Fahrenheit to Celsius: ").strip().upper()

if temp_type == 'C':
    celsius = float(input("Enter temperature in Celsius: "))
    fahrenheit = (celsius * 1.8) + 32
    print(f"{celsius}째C is equal to {fahrenheit:.1f}째F")
elif temp_type == 'F':
    fahrenheit = float(input("Enter temperature in Fahrenheit: "))
    celsius = (fahrenheit - 32) * 0.5555
    print(f"{fahrenheit}째F is equal to {celsius:.1f}째C")
else:
    print("Invalid input! Please enter 'C' or 'F'.")
